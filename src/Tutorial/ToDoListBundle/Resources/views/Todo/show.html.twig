{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Todo</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Completedat</th>
                <td>{{ entity.completedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Completed</th>
                <td>{{ entity.completed }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('todo') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('todo_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
